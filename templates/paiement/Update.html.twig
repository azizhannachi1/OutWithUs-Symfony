{% extends 'base.html.twig' %}
{% block body %}



<section id="main-content">
  <section class="wrapper">
    <h3><i class="fa fa-angle-right"></i> Modifier le Status de paiment</h3>
  
   
    <div class="row mt">
      <div class="col-lg-12">
        <div class="form-panel">
          <div class="form">
            {{ form_start(f,{'attr':{'class':'cmxform form-horizontal style-form'}}) }}
              <div class="form-group ">
                <label class="control-label col-lg-2">Carte </label>
                <div class="col-lg-10">
              
                  {{form_widget(f.carte,{'attr':{'class':'form-control'}})}}
                
                </div>
              </div>
              <div class="form-group ">
                <label class="control-label col-lg-2">Expiration Year</label>
                <div class="col-lg-10">
              
                  {{form_widget(f.year,{'attr':{'class':'form-control'}})}}
                
                </div>
              </div>
              <div class="form-group ">
                <label class="control-label col-lg-2">Expiration Month</label>
                <div class="col-lg-10">
              
                  {{form_widget(f.month,{'attr':{'class':'form-control'}})}}
                
                </div>
              </div>
              <div class="form-group ">
                <label class="control-label col-lg-2">CVC</label>
                <div class="col-lg-10">
              
                  {{form_widget(f.cvc,{'attr':{'class':'form-control'}})}}
                
                </div>
              </div>
              <div class="form-group ">
                <label class="control-label col-lg-2">Prix</label>
                <div class="col-lg-10">
              
                  {{form_widget(f.prix,{'attr':{'class':'form-control'}})}}
                
                </div>
              </div>
              
              <div class="form-group ">
                <label class="control-label col-lg-2">Modifier le status</label>
                <div class="col-lg-10">
                  
                     {{form_widget(f.status,{'attr':{'class':'form-control'}})}} 
                  
                   
                </div>
              
              </div>
              <div class="form-group ">
                <label class="control-label col-lg-2">Email</label>
                <div class="col-lg-10">
              
                  {{form_widget(f.email,{'attr':{'class':'form-control'}})}}
                
                </div>
              </div> 

              <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                 
                  {{form_widget(f.Update,{'attr':{'class':'btn btn-theme'}})}}
                </div>
              </div>
                      {{ form_end(f) }}
          </div>
       
          <br>         
        </div>     
      </div>
      </div>   
  </section>
</section>
 {% endblock %}