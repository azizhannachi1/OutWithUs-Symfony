{% extends 'base.html.twig' %}
{% block body %}

<br /><br /><br /><br />


       <section id="main-content">
      <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i> Liste des Paiements</h3>
        <div class="row mb">
          <!-- page start-->
          <div class="content-panel">
        <a href="{{ path('paiement_data_download') }}" class="btn btn-primary w-40">Télécharger les données</a>
        
            <div class="adv-table">
              <table cellpadding="0" cellspacing="0" border="0" class="table table-hover" id="hidden-table-info">
                <thead>
                  <tr>
                   
                    <th>carte</th>
                    <th>year</th>
                    <th>month</th>
                    <th>cvc</th>
                    <th>prix</th>
                    <th>status</th>
                    <th>email</th>
                    <th class="hidden-phone">Vérifier</th>
                    <th class="hidden-phone">Détails</th>
                    
                  
                  </tr>
                </thead>
                <tbody>
         
          <tr {% for p in paiement %}>

           
            <td>{{ p.carte }}</td>
            <td>{{ p.year }}</td>
            <td>{{ p.month }}</td>
            <td>{{ p.cvc }}</td>
            <td>{{ p.prix }}</td>
            <td>{{ p.status }}</td>
            <td>{{ p.email }}</td>
            <td><a href="{{ path('u',{'id':p.id}) }}">Vérifier</a></td>
            <td><a href="{{ path('details_paiement',{'id':p.id}) }}">Consulter</a></td>

              </tr {% endfor %}>
                </tbody>
              </table>
            </div>
          </div>
          <!-- page end-->
        </div>
        <!-- /row -->
      </section>
      <!-- /wrapper -->
    </section>

{% endblock %}