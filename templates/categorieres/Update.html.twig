{% extends 'base.html.twig' %}
{% block body %}
<section id="main-content">
  <section class="wrapper">
    <h3><i class="fa fa-angle-right"></i> Modifier Le Type de Réclamation</h3>
  
    <div class="row mt">
      <div class="col-lg-12">
        
        <div class="form-panel">
          <div class="form">
            {{ form_start(f,{'attr':{'class':'cmxform form-horizontal style-form'}}) }}
              <div class="form-group ">
                <label class="form-label">Nom (obligatoire)</label>
                <div class="col-lg-10">
              
                  {{form_widget(f.nom,{'attr':{'class':'form-control', 'placeholder': 'Type de catégorie de Réclamation...'}})}}
                  {{form_errors(f.nom,{'attr':{'class':'text-danger'}}) }}
                </div>
              </div>
              <div class="form-group ">
                <label class="form-label">Choisir une couleur</label>
                <div class="col-lg-10">
              
                  {{form_widget(f.color,{'attr':{'class':'form-control'}})}}
                 
                </div>
               
              </div>
              <div class="form-group">
                <div class="col-3">
                 
                  {{form_widget(f.Update,{'attr':{'class':'btn btn-primary w-100'}})}}
                </div>
              </div>
                      {{ form_end(f) }}
          </div>
        </div>
       
      </div>
     
    </div>
   




  </section>

</section> 

 {% endblock %}