{% extends 'base.html.twig' %}
{% block body %}


<section id="main-content">
  <section class="wrapper">
    <h3><i class="fa fa-angle-right"></i> Ajouter une RÃ©clamation</h3>
  
   
    <div class="row mt">
      <div class="col-lg-12">
        <div class="form-panel">
          <div class="form">
            {{ form_start(f,{'attr':{'class':'cmxform form-horizontal style-form', 'novalidate':'novalidate'}}) }}
              <div class="form-group ">
                <label class="form-label">Nom (obligatoire)</label>
                <div class="col-lg-10">
              
                  {{form_widget(f.nom,{'attr':{'class':'form-control', 'placeholder': 'Votre nom...','pattern': '[a-zA-Z]*'}})}}
                  {{form_errors(f.nom,{'attr':{'class':'text-danger'}}) }}
                </div>
              </div>
              <div class="form-group ">
                <label class="form-label">Prenom (obligatoire)</label>
                <div class="col-lg-10">
              
                  {{form_widget(f.prenom,{'attr':{'class':'form-control', 'placeholder': 'Votre prenom...'}})}}
                  {{form_errors(f.prenom,{'attr':{'class':'text-danger'}}) }}
                </div>
              </div>
              <div class="form-group ">
                <label class="form-label">Email (obligatoire)</label>
                <div class="col-lg-10">
              
                  {{form_widget(f.email,{'attr':{'class':'form-control', 'placeholder': 'Votre email...'}})}}
                  {{form_errors(f.email,{'attr':{'class':'text-danger'}}) }}
                </div>
              </div> 

              <div class="form-group ">
                <label class="form-label">Choisir un sujet</label>
                <div class="col-lg-10">
                  
                     {{form_widget(f.sujet,{'attr':{'class':'form-select'}})}} 
                     
                   
                </div>
              
              </div>
              <div class="form-group ">
                <label class="form-label">Message (obligatoire)</label>
                <div class="col-lg-10">
              
                  {{form_widget(f.message,{'attr':{'class':'form-control', 'placeholder': 'Votre message...'}})}}
                  {{form_errors(f.message,{'attr':{'class':'text-danger'}}) }}
                </div>
              </div>


              <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                 
                  {{form_widget(f.Ajouter,{'attr':{'class':'btn btn-primary w-100'}})}}
                </div>
              </div>
                      {{ form_end(f) }}
          </div>
       
          <br>         
        </div>     
      </div>
      </div>   
  </section>
</section>

 


{% endblock %}