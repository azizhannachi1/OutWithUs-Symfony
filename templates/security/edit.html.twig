{% extends 'base2.html.twig' %}
{% block title %}
<title>OutWithUs- Modifier vos données</title>
{% endblock %}
{% block body %}


<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
  <div class="container">

    <div class="d-flex justify-content-between align-items-center">
      <h2>Modifier vos données</h2>
     
    </div>

  </div>
</section>
<!-- End Breadcrumbs -->


<section id="blog" class="blog">
  <div class="container" data-aos="fade-up">

    <div class="row">

      <div class="col-lg-8 entries">
  
   
    <div class="row mt">
      <div class="col-lg-12">
        <div class="form-panel">
          <div class="form">
            {{ form_start(form,{'attr':{'class':'cmxform form-horizontal style-form', 'novalidate':'novalidate'}}) }}
              <div class="form-group ">
                <label class="control-label col-lg-2">Nom</label>
                <div class="col-lg-10">
              
                  {{form_widget(form.nom,{'attr':{'class':'form-control'}})}}
                  {{form_errors(form.nom,{'attr':{'class':'text-danger'}}) }}
                </div>
              </div>
              <div class="form-group ">
                <label class="control-label col-lg-2">Premon</label>
                <div class="col-lg-10">
              
                  {{form_widget(form.prenom,{'attr':{'class':'form-control'}})}}
                  {{form_errors(form.prenom,{'attr':{'class':'text-danger'}}) }}
                </div>
              </div>
              <div class="form-group ">
                <label class="control-label col-lg-3" hidden>Nom d'utilisateur</label>
                <div class="col-lg-10">
              
                  {{form_widget(form.username,{'attr':{'class':'form-control', 'hidden':'true'}})}}
               
                </div>
              </div>
              <div class="form-group ">
                <label class="control-label col-lg-2">Email</label>
                <div class="col-lg-10">
              
                  {{form_widget(form.email,{'attr':{'class':'form-control'}})}}
                  {{form_errors(form.email,{'attr':{'class':'text-danger'}}) }}
                </div>
              </div>
              <div class="form-group ">
                <label class="control-label col-lg-2">Mot de passe</label>
                <div class="col-lg-10">
              
                  {{form_widget(form.password,{'attr':{'class':'form-control'}})}}
                  {{form_errors(form.password,{'attr':{'class':'text-danger'}}) }}
                </div>
              </div>
             

              <div>
                <label class="control-label col-lg-3">Votre photo de profil</label>
                <div class="col-lg-10">
                  {% if user.image|length > 0 %}
                <img src="{{ asset('uploads/'~ user.image ) }}" width="250" height="150" alt="">
                {% else %}
                <img src="{{ asset('uploads/'~ "Not Found.jpg" ) }}" width="250" height="150" alt="">
                {% endif %}
                </div>
            </div>

              <div class="form-group ">
                <label class="control-label col-lg-2">Modifier l'image</label>
                <div class="col-lg-10">
              
                  {{form_widget(form.image,{'attr':{'class':'form-control'}})}}
                 
                </div>
              </div>
             
              <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                 
                  {{form_widget(form.Modifier,{'attr':{'class':'btn btn-danger'}})}}
                </div>
              </div>
                      {{ form_end(form) }}
          </div>
       
          <br>         
        </div>     
      </div>
      </div>  
      
    </div>     
  </div>
  </div>  

  </section>


 


{% endblock %}