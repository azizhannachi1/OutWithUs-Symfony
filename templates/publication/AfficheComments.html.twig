{% extends 'base.html.twig' %}
{% block body %}

<br /><br /><br /><br />


       <section id="main-content">
      <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i> Liste des Commentaires</h3>
        <div class="row mb">
          <!-- page start-->
          <div class="content-panel">
        
        
            <div class="adv-table">
              <table cellpadding="0" cellspacing="0" border="0" class="table table-hover" id="hidden-table-info">
                <thead>
                  <tr>
                    <th>Actions</th>
                    <th>Utilisateur</th>
                    <th>Publication</th>
                    <th>Commentaire</th>
                    <th>Date</th>
                    
                   
                    
                  </tr>
                </thead>
                <tbody>
         
          <tr {% for c in commentaires %}>

            <td>
                <a href="{{ path('update_comment',{'id':c.id}) }}">Modifier</a>
                <a href="{{ path('supprimer_commentaire',{'id':c.id}) }}">Supprimer</a>
               
              </td>
            <td>{{ c.user.nom }}</td>
               <td>{{ c.publications.titre }}</td>
               <td>{{ c.content }}</td>
           <td>{{ c.createdAt ? c.createdAt|date('Y-m-d') : '' }}</td>
            
            
           



        </tr {% endfor %}>
                </tbody>
              </table>
            </div>
          </div>
          <!-- page end-->
        </div>
        <!-- /row -->
      </section>
      <!-- /wrapper -->
    </section>

{% endblock %}