{% extends 'base2.html.twig' %}
{% block title %}
<title>OutWithUs- Ajouter une publication</title>
{% endblock %}
{% block body %}


<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
  <div class="container">

    <div class="d-flex justify-content-between align-items-center">
      <h2>Ajouter Publication</h2>
      <ol>
        <li><a href="index.html">Home</a></li>
      </ol>
    </div>

  </div>
</section>
<!-- End Breadcrumbs -->

<section id="blog" class="blog">
  <div class="container" data-aos="fade-up">

    <div class="row">

      <div class="col-lg-8 entries">

  
   
    <div class="row mt">
      <div class="col-lg-12">
        <div class="form-panel">
          <div class="form">
            {{ form_start(f,{'attr':{'class':'cmxform form-horizontal style-form', 'novalidate':'novalidate'}}) }}
              <div class="form-group ">
                <label class="control-label col-lg-2">Titre</label>
                <div class="col-lg-10">
              
                  {{form_widget(f.titre,{'attr':{'class':'form-control', 'placeholder': 'Le titre du publication'}})}}
                  {{form_errors(f.titre,{'attr':{'class':'text-danger'}}) }}
                </div>
              </div>
              <div class="form-group ">
                <label class="control-label col-lg-2">Text</label>
                <div class="col-lg-10">
              
                  {{form_widget(f.text,{'attr':{'class':'form-control'}})}}
                  {{form_errors(f.text,{'attr':{'class':'text-danger'}}) }}
                </div>
              </div>
              <div class="form-group ">
                <label class="control-label col-lg-3">Ajouter une image</label>
                <div class="col-lg-10">
              
                  {{form_widget(f.image,{'attr':{'class':'form-control'}})}}
                 
                </div>
              </div>
           
              <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                 
                  {{form_widget(f.Ajouter,{'attr':{'class':'btn btn-danger'}})}}
                </div>
              </div>
                      {{ form_end(f) }}
          </div>
       
          <br>         
        </div>     
      </div>
      </div> 
              
    </div>     
  </div>
  </div>   
</section>

 


{% endblock %}